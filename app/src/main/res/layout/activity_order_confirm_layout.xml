    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_signin_img"
        android:background="#F6F6F6"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/rounded_border_gray"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp">

                <RelativeLayout
                    android:id="@+id/rl_service_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/iv_image"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_65sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/house_hold_cleaning" />

                    <TextView
                        android:id="@+id/tv_service_type_name_heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:fontFamily="@font/worksans_regular"
                        android:gravity="right"
                        android:text="Household cleaning"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/rl_service_type"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/tv_company_name_here"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_line"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/worksans_bold"
                    android:gravity="left"
                    android:text="Bro4u Online Services Private Limited"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view_one"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/rounded_border_gray"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tv_selected_slot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/worksans_bold"
                    android:gravity="left"
                    android:text="Selected Slots"
                    android:textColor="@color/orange_new"
                    android:textSize="@dimen/_14ssp" />


                <TextView
                    android:id="@+id/tv_morning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_selected_slot"
                    android:layout_margin="5dp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/worksans_bold"
                    android:gravity="left"
                    android:text="13th May, 2021 Thursday"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/_13ssp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view_two"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/rounded_border_gray"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tv_address_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/worksans_bold"
                    android:gravity="left"
                    android:text="Address"
                    android:textColor="@color/orange_new"
                    android:textSize="@dimen/_14ssp" />


                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_address_header"
                    android:layout_margin="5dp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/worksans_regular"
                    android:gravity="left"
                    android:text="Unnamed Road, Vasanth Nagar Colony,
Sri Sai Nagar, Hyderabad, Telangana 500090"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/_13ssp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view_three"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/rounded_border_gray"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tv_estimate_arrival"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@drawable/border_left_green_strip"
                    android:fontFamily="@font/worksans_bold"
                    android:gravity="left"
                    android:paddingLeft="@dimen/_10ssp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Estimated Arrival"
                    android:textColor="@color/orange_new"
                    android:textSize="@dimen/_14ssp" />


                <TextView
                    android:id="@+id/tv_half_an_hour_rate_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_estimate_arrival"
                    android:layout_margin="5dp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/worksans_regular"
                    android:gravity="left"
                    android:paddingLeft="@dimen/_10ssp"
                    android:text="Half An Hour Rate"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:id="@+id/tv_half_an_hour_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_estimate_arrival"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_toRightOf="@+id/tv_half_an_hour_rate_text"
                    android:fontFamily="@font/worksans_bold"
                    android:gravity="right"
                    android:text="250"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:id="@+id/tv_an_hour_rate_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_half_an_hour_rate_text"
                    android:layout_margin="5dp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/worksans_regular"
                    android:gravity="left"
                    android:paddingLeft="@dimen/_10ssp"
                    android:text="An Hour Rate"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:id="@+id/tv_an_hour_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_half_an_hour_rate_text"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_toRightOf="@+id/tv_an_hour_rate_text"
                    android:fontFamily="@font/worksans_bold"
                    android:gravity="right"
                    android:text="200"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:id="@+id/tv_two_hour_rate_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_an_hour_rate_text"
                    android:layout_margin="5dp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/worksans_regular"
                    android:gravity="left"
                    android:paddingLeft="@dimen/_10ssp"
                    android:text="Two Hour Rate"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:id="@+id/tv_two_hour_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_an_hour_rate"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_toRightOf="@+id/tv_an_hour_rate_text"
                    android:fontFamily="@font/worksans_bold"
                    android:gravity="right"
                    android:text="150"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/_15ssp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view_four"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/rounded_border_gray"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/worksans_bold"
                    android:gravity="left"
                    android:text="Total Amount"
                    android:textColor="@color/orange_new"
                    android:textSize="@dimen/_14ssp" />


                <TextView
                    android:id="@+id/tv_total_amount_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_total_amount"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/worksans_bold"
                    android:gravity="right"
                    android:text="1200"
                    android:textColor="@color/black_bg"
                    android:textSize="@dimen/_18ssp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view_five"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/rounded_fill_black"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/worksans_medium"
            android:gravity="center"
            android:text="CONFIRM"
            android:padding="@dimen/_11sdp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_15ssp" />

    </RelativeLayout>
    <!-- </RelativeLayout>-->


</ScrollView>