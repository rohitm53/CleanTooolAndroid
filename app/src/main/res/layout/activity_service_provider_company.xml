        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_signin_img"
            android:background="#F6F6F6"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rounded_border_gray"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp">

                    <RelativeLayout
                        android:id="@+id/rl_service_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/iv_image"
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/house_hold_cleaning" />

                        <TextView
                            android:id="@+id/tv_service_type_name_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:fontFamily="@font/worksans_regular"
                            android:gravity="right"
                            android:text="Household cleaning"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/rl_service_type"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/tv_company_name_here"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_line"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:fontFamily="@font/worksans_bold"
                        android:gravity="left"
                        android:text="Bro4u Online Services Private Limited"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp" />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view_one"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rounded_border_gray"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/tv_select_slots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"

                        android:layout_marginRight="@dimen/_15sdp"
                        android:fontFamily="@font/worksans_bold"
                        android:gravity="left"
                        android:text="Select Slots"
                        android:textColor="@color/orange_new"
                        android:textSize="@dimen/_13ssp" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/tv_select_slots"
                        android:fontFamily="@font/worksans_bold"
                        android:gravity="right"
                        android:text="13th May 2021"
                        android:textColor="@color/black_bg"
                        android:textSize="@dimen/_13ssp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_date">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/circle_gray_fill"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/calendar_icon" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_select_slots"
                        android:layout_margin="5dp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:fontFamily="@font/worksans_bold"
                        android:gravity="left"
                        android:text="Morning"
                        android:textColor="@color/black_bg"
                        android:textSize="@dimen/_13ssp" />

                    <HorizontalScrollView
                        android:id="@+id/hs_morning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_morning">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_household"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/rounded_fill_green"
                                android:fontFamily="@font/worksans_bold"
                                android:padding="@dimen/_7sdp"
                                android:paddingLeft="@dimen/margin_10"
                                android:paddingRight="@dimen/margin_10"
                                android:text="08:00"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_9ssp" />

                            <TextView
                                android:id="@+id/tv_commercial"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/rounded_border_black"
                                android:fontFamily="@font/worksans_bold"
                                android:padding="@dimen/_7sdp"
                                android:paddingLeft="@dimen/margin_10"
                                android:paddingRight="@dimen/margin_10"
                                android:text="09:00"
                                android:textColor="@color/black_bg"
                                android:textSize="@dimen/_9ssp" />

                            <TextView
                                android:id="@+id/tv_laundry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/rounded_border_black"
                                android:fontFamily="@font/worksans_bold"
                                android:padding="@dimen/_7sdp"
                                android:paddingLeft="@dimen/margin_10"
                                android:paddingRight="@dimen/margin_10"
                                android:text="10:00"
                                android:textColor="@color/black_bg"
                                android:textSize="@dimen/_9ssp" />

                            <TextView
                                android:id="@+id/tv_garden"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/rounded_border_black"
                                android:fontFamily="@font/worksans_bold"
                                android:padding="@dimen/_7sdp"
                                android:paddingLeft="@dimen/margin_10"
                                android:paddingRight="@dimen/margin_10"
                                android:text="11:00"
                                android:textColor="@color/black_bg"
                                android:textSize="@dimen/_9ssp" />
                        </LinearLayout>


                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/tv_afternoon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hs_morning"
                        android:layout_margin="5dp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:fontFamily="@font/worksans_bold"
                        android:gravity="left"
                        android:text="Afternoon"
                        android:textColor="@color/black_bg"
                        android:textSize="@dimen/_13ssp" />

                    <HorizontalScrollView
                        android:id="@+id/hs_afternoon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_afternoon">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/rounded_fill_green"
                                android:fontFamily="@font/worksans_bold"
                                android:padding="@dimen/_7sdp"
                                android:paddingLeft="@dimen/margin_10"
                                android:paddingRight="@dimen/margin_10"
                                android:text="01:00"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_9ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/rounded_border_black"
                                android:fontFamily="@font/worksans_bold"
                                android:padding="@dimen/_7sdp"
                                android:paddingLeft="@dimen/margin_10"
                                android:paddingRight="@dimen/margin_10"
                                android:text="03:00"
                                android:textColor="@color/black_bg"
                                android:textSize="@dimen/_9ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/rounded_border_black"
                                android:fontFamily="@font/worksans_bold"
                                android:padding="@dimen/_7sdp"
                                android:paddingLeft="@dimen/margin_10"
                                android:paddingRight="@dimen/margin_10"
                                android:text="04:00"
                                android:textColor="@color/black_bg"
                                android:textSize="@dimen/_9ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/rounded_border_black"
                                android:fontFamily="@font/worksans_bold"
                                android:padding="@dimen/_7sdp"
                                android:paddingLeft="@dimen/margin_10"
                                android:paddingRight="@dimen/margin_10"
                                android:text="05:00"
                                android:textColor="@color/black_bg"
                                android:textSize="@dimen/_9ssp" />
                        </LinearLayout>


                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/tv_evening"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hs_afternoon"
                        android:layout_margin="5dp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:fontFamily="@font/worksans_bold"
                        android:gravity="left"
                        android:text="Evening"
                        android:textColor="@color/black_bg"
                        android:textSize="@dimen/_13ssp" />

                    <HorizontalScrollView
                        android:id="@+id/hs_evening"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_evening">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/rounded_fill_green"
                                android:fontFamily="@font/worksans_bold"
                                android:padding="@dimen/_7sdp"
                                android:paddingLeft="@dimen/margin_10"
                                android:paddingRight="@dimen/margin_10"
                                android:text="07:00"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_9ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/rounded_border_black"
                                android:fontFamily="@font/worksans_bold"
                                android:padding="@dimen/_7sdp"
                                android:paddingLeft="@dimen/margin_10"
                                android:paddingRight="@dimen/margin_10"
                                android:text="08:00"
                                android:textColor="@color/black_bg"
                                android:textSize="@dimen/_9ssp" />


                        </LinearLayout>


                    </HorizontalScrollView>
                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view_two"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rounded_border_gray"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="vertical"

                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">


                <TextView
                    android:id="@+id/tv_add_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/worksans_bold"
                    android:gravity="left"
                    android:padding="@dimen/_8sdp"
                    android:text="Add Address"
                    android:textColor="@color/orange_new"
                    android:textSize="@dimen/_13ssp" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_date"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/circle_gray_fill"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/plus_icon" />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/rounded_fill_black"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/worksans_medium"
                android:gravity="center"
                android:hint="Next"
                android:padding="@dimen/_11sdp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_15ssp" />

        </RelativeLayout>
  <!--  </RelativeLayout>-->


</androidx.constraintlayout.widget.ConstraintLayout>