<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="3dp"
        app:contentPadding="3dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_sno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:background="@drawable/rounded_border_red"
                android:fontFamily="@font/worksans_bold"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text="01"
                android:textSize="@dimen/text_18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_service_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15"
                android:text="Service Name"
                android:fontFamily="@font/worksans_bold"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_20sp"
                android:transitionName="servicenametoanimate"
                app:layout_constraintEnd_toStartOf="@+id/tv_status"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_sno"
                app:layout_constraintTop_toTopOf="@id/tv_sno" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15"
                android:fontFamily="@font/worksans_bold"
                android:text="Pending"
                android:textColor="@color/pending_service_req"
                android:textSize="@dimen/text_20sp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_service_name"
                app:layout_constraintTop_toTopOf="@id/tv_service_name" />

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_regular"
                android:text="By Company Name"
                android:textSize="@dimen/text_15sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_time_slot"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_sno"
                app:layout_constraintStart_toStartOf="@id/tv_service_name"
                app:layout_constraintTop_toBottomOf="@id/tv_service_name" />

            <TextView
                android:id="@+id/tv_time_slot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_regular"
                android:text="12:00"
                android:textSize="@dimen/text_15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_company_name"
                app:layout_constraintTop_toTopOf="@id/tv_company_name" />

            <TextView
                android:id="@+id/tv_req_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_bold"
                android:text="Req id : "
                android:textSize="@dimen/text_15sp"
                app:layout_constraintLeft_toLeftOf="@id/tv_company_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_company_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

