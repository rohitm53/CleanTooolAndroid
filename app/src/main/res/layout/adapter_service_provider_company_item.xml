<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp">

            <LinearLayout
                android:id="@+id/ll_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_app_icon"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_margin="@dimen/margin_5"
                        android:fontFamily="@font/worksans_bold"
                        android:gravity="center"
                        android:src="@drawable/app_icon" />

                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/worksans_bold"
                        android:gravity="center"
                        android:padding="@dimen/margin_5"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_10"
                        android:text="4.5/5"
                        android:textColor="@color/orange_new"
                        android:textSize="@dimen/_15ssp"
                        app:layout_constraintLeft_toRightOf="@id/iv_app_icon"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_company_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/worksans_bold"
                            android:minLines="2"
                            android:padding="@dimen/margin_5"
                            android:paddingLeft="@dimen/margin_10"
                            android:paddingRight="@dimen/margin_10"
                            android:text="Bro4U "
                            android:textColor="@color/black_bg"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_available_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/rounded_border_black"
                            android:fontFamily="@font/worksans_bold"
                            android:gravity="left|center"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="Avbl no:\n 20 People"
                            android:textColor="@color/black_bg"
                            android:textSize="@dimen/_8ssp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_company_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans_light"
                        android:padding="@dimen/margin_5"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_10"
                        android:text="No 28, 3rd Floor, Above Sirsi Urban Co-op Bank, 19th Main, 2nd Block, Rajaji Nagar, Bengaluru - 560010"
                        android:textColor="@color/black_bg"
                        android:textSize="@dimen/_9ssp" />
                </LinearLayout>
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/hs_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_body">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_household"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rounded_border_green"
                        android:fontFamily="@font/worksans_bold"
                        android:padding="@dimen/_5sdp"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_10"
                        android:text="Household"
                        android:textColor="@color/login_green"
                        android:textSize="@dimen/_8ssp" />

                    <TextView
                        android:id="@+id/tv_commercial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rounded_border_green"
                        android:fontFamily="@font/worksans_bold"
                        android:padding="@dimen/_5sdp"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_10"
                        android:text="Commercial"
                        android:textColor="@color/login_green"
                        android:textSize="@dimen/_8ssp" />

                    <TextView
                        android:id="@+id/tv_laundry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rounded_border_green"
                        android:fontFamily="@font/worksans_bold"
                        android:padding="@dimen/_5sdp"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_10"
                        android:text="laundry"
                        android:textColor="@color/login_green"
                        android:textSize="@dimen/_8ssp" />

                    <TextView
                        android:id="@+id/tv_garden"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rounded_border_green"
                        android:fontFamily="@font/worksans_bold"
                        android:padding="@dimen/_5sdp"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_10"
                        android:text="garden"
                        android:textColor="@color/login_green"
                        android:textSize="@dimen/_8ssp" />
                </LinearLayout>


            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_service_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hs_services"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/left_half_black_border"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/worksans_medium"
                android:hint="Service fee : 400*3"
                android:padding="@dimen/_9sdp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/tv_totalamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hs_services"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_toRightOf="@+id/tv_service_fee"
                android:background="@drawable/right_half_black_border"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/worksans_medium"
                android:hint="1200"
                android:padding="@dimen/_9sdp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_10ssp" />


            <TextView
                android:id="@+id/tv_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hs_services"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_toRightOf="@+id/tv_totalamount"
                android:background="@drawable/rounded_fill_black"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/worksans_medium"
                android:gravity="center"
                android:hint="@string/book"
                android:padding="@dimen/_9sdp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_10ssp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>