<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_sno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:fontFamily="@font/worksans_bold"
        android:gravity="center"
        android:textSize="@dimen/text_25sp"
        android:padding="@dimen/margin_15"
        android:layout_margin="@dimen/margin_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_company_name"
        android:background="@drawable/rounded_border_red"
        />

    <TextView
        android:id="@+id/tv_company_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/worksans_bold"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:text="Company Name"
        android:textSize="@dimen/text_25sp"
        android:padding="@dimen/margin_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_sno"
        app:layout_constraintRight_toRightOf="parent"
     />


    <TextView
        android:id="@+id/tv_company_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/worksans_medium"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:text="Company address"
        android:textSize="@dimen/text_20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_company_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_company_name"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="@dimen/margin_5"
        />


</androidx.constraintlayout.widget.ConstraintLayout>