<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_welcome_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/black_bg"
            android:fontFamily="@font/worksans_bold"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/back_arrow_icon" />

        <ImageView
            android:id="@+id/iv_clean_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_toRightOf="@+id/btn_back"
            android:src="@drawable/app_clean_service" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_service"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_welcome_tag"
        android:background="@drawable/top_half_rounded_border_white">

        <RelativeLayout
            android:id="@+id/rl_service_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_margin="@dimen/_5sdp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/house_hold_cleaning" />

            <TextView
                android:id="@+id/tv_service_type_name_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_15sdp"
                android:layout_toRightOf="@+id/iv_image"
                android:fontFamily="@font/worksans_bold"
                android:text="Household cleaning"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_service_header"
            android:foregroundGravity="center" />
    </RelativeLayout>
</LinearLayout>