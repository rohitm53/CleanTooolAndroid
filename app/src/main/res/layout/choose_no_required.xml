<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_border_gray"
    android:elevation="5dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp">


    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/rounded_border_gray"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginRight="@dimen/_15sdp"
                android:fontFamily="@font/worksans_bold"
                android:gravity="center"
                android:text="Filter"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />


            <TextView
                android:id="@+id/tv_people_required"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_filter"
                android:layout_gravity="center|left"
                android:layout_margin="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:fontFamily="@font/worksans_bold"
                android:gravity="center"
                android:text="People required"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/et_req_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_people_required"
                android:fontFamily="@font/worksans_bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_req_num"
                android:layout_margin="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/rounded_fill_black"
                android:fontFamily="@font/worksans_bold"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:textSize="@dimen/text_20sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
